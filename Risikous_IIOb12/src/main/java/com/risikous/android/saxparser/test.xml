<?xml version="1.0" encoding="utf-8"?>
<test>

    <questionnaire>
        <reportingArea required="true" text="Meldekreis"/>
        <incidentDescription maximumOfCharacters="1000" required="true" text="Ereignisbeschreibung"/>
        <riskEstimation text="Risikobewertung">
            <occurrenceRating required="true" text="Eintrittswahrscheinlichkeit"/>
            <detectionRating required="true" text="Entdeckungswahrscheinlichkeit"/>
            <significance required="true" text="Bedeutung"/>
        </riskEstimation>
        <pointOfTime text="Wann ist das Ereignis passiert?">
            <date format="dd.MM.yyyy" text="Datum"/>
            <time format="HH:mm" text="Uhrzeit"/>
        </pointOfTime>
        <location maximumOfCharacters="50" text="Wo ist das Ereignis passiert?"/>
        <immediateMeasure maximumOfCharacters="1000" text="Was wurde als Sofortmaßnahme eingeleitet?"/>
        <consequences maximumOfCharacters="1000" text="Folgen (z.B.: Personenschäden)"/>
        <opinionOfReporter text="Was hat Ihrer Meinung nach zu dem Ereignis geführt?">
            <personalFactors maximumOfCharacters="1000" text="Personenbezogene Faktoren"/>
            <organisationalFactors maximumOfCharacters="1000" text="Organisatorische Faktoren"/>
            <additionalNotes maximumOfCharacters="1000" text="Weitere Anmerkungen"/>
        </opinionOfReporter>
        <files annotation="Folgende Formate sind erlaubt: Bilder (bmp, gif, jpg, jpeg, png), Office (doc, docx, ppt, pptx, xls, xlsx), OpenOffice (odt, ods, odp), Dokumente (pdf, rtf, txt)"
               maximumSizeInMB="5" text="Bilder/Dateien anhängen">
            <file encoding="Base64" name=""/>
        </files>
        <contactInformation maximumOfCharacters="1000" text="Kontaktdaten"/>
    </questionnaire>

