<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="match_parent" android:background="@color/risikousmainbackground"
                android:minHeight="400dp"
                android:tag="publication_fragment">
    <ListView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/listView"/>
    <LinearLayout
            android:orientation="vertical"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:id="@+id/commentLayout"
            android:visibility="gone"
            android:background="@color/risikousmainbackground" android:clickable="true">
        <include layout="@layout/publication_layout"
                 android:id="@+id/publicationLayout"/>
        <ExpandableListView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:minHeight="400dp"
                android:id="@+id/expandableListView"/>
    </LinearLayout>


</RelativeLayout>